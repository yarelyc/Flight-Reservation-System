<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seat Reservation"
        android:layout_marginBottom="12dp"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal" />



    <EditText
        android:id="@+id/departureInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Departure"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_below="@+id/title">
    </EditText>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Arrival"
        android:id="@+id/arrivalInput"
        android:paddingLeft="8dp"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/departureInput"/>
   <!-- <Spinner
        android:id="@+id/departTime"
        android:layout_width="200dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
        -->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Number Of Tickets"
        android:id="@+id/numberOfTicketsInput"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/arrivalInput"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="#FFFFFF"
        android:id="@+id/submitButton"
        android:layout_below="@id/numberOfTicketsInput"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>